    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div>
    <h4>Customer Details</h4>
    <hr />
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
