<p> Customer Orders</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RefNo)
        </th>
        <th>
            <b>Cart Code</b>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
 
    
     
        <th></th>
    </tr>

    @foreach (var item in Model.Transactions)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RefNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cart.CartId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
 
       
       
            <td>
                @Html.RouteLink("Edit" new {Action= "Edit", Controller= "Orders", id = item.Id }) |
                @Html.ActionLink("Details" new { Action = "Details", Controller = "Orders", id = item.Id }) 
       
            </td>
        </tr>
    }

</table>